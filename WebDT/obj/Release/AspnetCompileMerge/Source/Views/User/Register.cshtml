@model WebDT.Models.RegisterModel

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Login.cshtml";
}

    @using (Html.BeginForm("Register", "User", FormMethod.Post)) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            @*<h4>RegisterModel</h4>
            <hr />*@
            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @if(ViewBag.Success != null)
                {
                    <div class="text-success">@ViewBag.Success</div>
                }
            </div>
            <div class="form-group form-group-res">
                @Html.LabelFor(model => model.nd_HoVaTen, htmlAttributes: new { @class = "control-label  " })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.nd_HoVaTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nd_HoVaTen, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group form-group-res">
                @Html.LabelFor(model => model.nd_UserName, htmlAttributes: new { @class = "control-label  " })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.nd_UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nd_UserName, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group form-group-res">
                @Html.LabelFor(model => model.nd_Password, htmlAttributes: new { @class = "control-label  " })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.nd_Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nd_Password, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group form-group-res">
                @Html.LabelFor(model => model.nd_PasswordConfirm, htmlAttributes: new { @class = "control-label  " })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.nd_PasswordConfirm, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nd_PasswordConfirm, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group form-group-res">
                @Html.LabelFor(model => model.nd_Email, htmlAttributes: new { @class = "control-label  " })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.nd_Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nd_Email, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group form-group-res">
                @Html.LabelFor(model => model.nd_DiaChi, htmlAttributes: new { @class = "control-label  " })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.nd_DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nd_DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group form-group-res">
                @Html.LabelFor(model => model.nd_SoDienThoai, htmlAttributes: new { @class = "control-label  " })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.nd_SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nd_SoDienThoai, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng ký" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }