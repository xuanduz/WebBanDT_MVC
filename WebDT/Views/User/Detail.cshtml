@model WebDT.Models.EF.Nguoi_Dung

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Detail", "User", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal row">
    <div class="col-xl-3 col-12 sidebar">
        <div class="user-pic">
            <img src="https://hocwebgiare.com/thiet_ke_web_chuan_demo/bootstrap_user_profile/images/profile_user.jpg" class="img-responsive" alt="Thông tin cá nhân">
        </div>
        <div class="user-name">@Model.nd_HoVaTen</div>
        <div class="menu">
            <nav class="navbar navbar-light bg-light">
                <a href="/checklogin/deletesession">Đăng xuất</a>
            </nav>
        </div>
    </div>
    <div class="col-xl-9 col-12">
        <h4>Thông tin cá nhân</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group" style="display: none;">
            @Html.LabelFor(model => model.nd_Id, "ID", htmlAttributes: new { @class = "control-label  " })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.nd_Id, new { htmlAttributes = new { @class = "form-control" }, @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.nd_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nd_UserName, "Tên đăng nhập", htmlAttributes: new { @class = "control-label  " })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.nd_UserName, new { htmlAttributes = new { @class = "form-control" }, @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.nd_UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nd_Password, "Mật khẩu", htmlAttributes: new { @class = "control-label  " })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.nd_Password, new { htmlAttributes = new { @class = "form-control" }, value = Model.nd_Password })
                @Html.ValidationMessageFor(model => model.nd_Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nd_HoVaTen, "Họ và tên", htmlAttributes: new { @class = "control-label  " })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.nd_HoVaTen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nd_HoVaTen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nd_Email, "Email", htmlAttributes: new { @class = "control-label  " })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.nd_Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nd_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nd_DiaChi, "Địa chỉ", htmlAttributes: new { @class = "control-label  " })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.nd_DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nd_DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nd_SoDienThoai, "Số điện thoại", htmlAttributes: new { @class = "control-label  " })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.nd_SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nd_SoDienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2  ">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>
    }
